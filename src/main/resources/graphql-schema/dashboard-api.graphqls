schema {
    query: Query
    mutation: Mutation
}

type Mutation {
    writePost(author: String, title: String, category: String): Post!
    addAuthor(name: String, age: Int, country: String): Author!
}

type Query {
    posts: [Post]!
    postById(id: ID!): Post!
    authors: [Author]!
}

type Post {
    id: ID!
    title: String!
    author: String!
}

type Author {
    id: ID!
    name: String!
    age: Int
    country: String
}
